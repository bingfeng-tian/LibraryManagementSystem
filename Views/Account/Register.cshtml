@model LibraryManagementSystem.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "註冊";
}

<h1 class="text-2xl font-bold mb-4">註冊</h1>
<form asp-action="Register" method="post" class="space-y-4">
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
    <div>
        <label class="block">用戶名</label>
        <input name="username" class="w-full p-2 border rounded" required />
        <span asp-validation-for="username" class="text-red-500"></span>
    </div>
    <div>
        <label class="block">電子郵件</label>
        <input name="email" type="email" class="w-full p-2 border rounded" required />
        <span asp-validation-for="email" class="text-red-500"></span>
    </div>
    <div>
        <label class="block">密碼</label>
        <input type="password" name="password" class="w-full p-2 border rounded" required />
        <span asp-validation-for="password" class="text-red-500"></span>
    </div>
    <div class="mt-4 space-x-2">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">註冊</button>
        <a asp-action="Login" asp-controller="Account" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">返回登錄</a>
    </div>
    @if (ViewData.ModelState.ContainsKey(string.Empty))
    {
        <div class="text-red-500 mt-2">
            @foreach (var error in ViewData.ModelState[string.Empty].Errors)
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}