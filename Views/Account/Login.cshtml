@model LibraryManagementSystem.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "登錄";
}

<h1 class="text-2xl font-bold mb-4">登錄</h1>
<form asp-action="Login" method="post" class="space-y-4">
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
    <div>
        <label class="block">用戶名</label>
        <input asp-for="username" class="w-full p-2 border rounded" required />
        <span asp-validation-for="username" class="text-red-500"></span>
    </div>
    <div>
        <label class="block">密碼</label>
        <input asp-for="password" type="password" class="w-full p-2 border rounded" required />
        <span asp-validation-for="password" class="text-red-500"></span>
    </div>
    <div class="mt-4 space-x-2">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">登錄</button>
    </div>
    @if (ViewData.ModelState.ContainsKey(string.Empty))
    {
        var error = ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault();
        if (error != null)
        {
            <div class="text-red-500 mt-2">
                @error.ErrorMessage
            </div>
        }
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}