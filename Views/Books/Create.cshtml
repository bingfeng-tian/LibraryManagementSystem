@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "新增書籍";
}

<h1 class="text-2xl font-bold mb-4">新增書籍</h1>

<form asp-action="Create" class="space-y-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label asp-for="Title" class="block">書名</label>
            <input asp-for="Title" class="w-full p-2 border rounded" required />
            <span asp-validation-for="Title" class="text-red-500"></span>
        </div>
        <div>
            <label asp-for="Author" class="block">作者</label>
            <input asp-for="Author" class="w-full p-2 border rounded" required />
            <span asp-validation-for="Author" class="text-red-500"></span>
        </div>
        <div>
            <label asp-for="ISBN" class="block">ISBN</label>
            <input asp-for="ISBN" class="w-full p-2 border rounded" required />
            <span asp-validation-for="ISBN" class="text-red-500"></span>
        </div>
        <div>
            <label asp-for="PublishDate" class="block">出版日期</label>
            <input asp-for="PublishDate" type="date" class="w-full p-2 border rounded" />
            <span asp-validation-for="PublishDate" class="text-red-500"></span>
        </div>
        <div>
            <label asp-for="Price" class="block">價格</label>
            <input asp-for="Price" type="number" step="0.01" class="w-full p-2 border rounded" />
            <span asp-validation-for="Price" class="text-red-500"></span>
        </div>
        <div>
            <label asp-for="Category" class="block">類別</label>
            <select asp-for="Category" class="w-full p-2 border rounded">
                <option value="小說">小說</option>
                <option value="技術">技術</option>
                <option value="歷史">歷史</option>
            </select>
            <span asp-validation-for="Category" class="text-red-500"></span>
        </div>
        <div>
            <label asp-for="Publisher" class="block">出版社</label>
            <input asp-for="Publisher" class="w-full p-2 border rounded" />
            <span asp-validation-for="Publisher" class="text-red-500"></span>
        </div>
    </div>
    <div class="mt-4 space-x-2">
        <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">新增</button>
        <a asp-action="Index" asp-controller="Books" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">返回清單</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}